<?xml version="1.0" encoding="utf-8" ?>
<toolbarapplet on_load="onToolbarAppletLoad" on_click="onButtonClick" buttonstyle="windows" buttonsize="26,25">
	<toolbar id="viewerbar">
		<button image="../images/New.svg" id="new_report" tooltip="Nouveau rapport"/>
		<button image="../images/EditItem.svg" id="edit_report" tooltip="Modifier le rapport" />
		<button image="../images/SaveAs.svg" id="save_as_report" tooltip="Enregistrer le rapport sous..." />
		<button image="../images/Delete.svg" id="delete_report" tooltip="Supprimer le rapport" />
		<separator/>
		<button image="../images/Print.svg" id="print_report" tooltip="Imprimer"/>
		<separator/>
		<button image="../images/PDF.svg" id="export_pdf" tooltip="Exporter vers PDF" />
		<button image="../images/ExportToExcel.svg" id="export_excel" tooltip="Exporter vers Excel" />
		<button image="../images/ExportToWord.svg" id="export_word" tooltip="Exporter vers Word" />
		<button image="../images/CSV.svg" id="export_csv" tooltip="Exporter vers CSV" />
		<button image="../images/XML.svg" id="export_xml" tooltip="Exporter vers XML" />
		<separator/>
		<choice width="auto" id="results" tooltip="Nombre maximum des résultats" text="Résultats">
			<choiceitem id="1">1 Result</choiceitem>
			<choiceitem id="10">10 Results</choiceitem>
			<choiceitem id="100">100 Results</choiceitem>
			<choiceitem id="1000">1000 Results</choiceitem>
			<choiceitem id="10000">10000 Results</choiceitem>
			<choiceitem id="-1">All Results</choiceitem>
		</choice>
	</toolbar>
</toolbarapplet>