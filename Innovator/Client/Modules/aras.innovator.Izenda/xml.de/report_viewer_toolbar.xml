<?xml version="1.0" encoding="utf-8" ?>
<toolbarapplet on_load="onToolbarAppletLoad" on_click="onButtonClick" buttonstyle="windows" buttonsize="26,25">
	<toolbar id="viewerbar">
		<button image="../images/New.svg" id="new_report" tooltip="Neuer Bericht"/>
		<button image="../images/EditItem.svg" id="edit_report" tooltip="Bericht bearbeiten" />
		<button image="../images/SaveAs.svg" id="save_as_report" tooltip="Bericht speichern unter..." />
		<button image="../images/Delete.svg" id="delete_report" tooltip="Bericht löschen" />
		<separator/>
		<button image="../images/Print.svg" id="print_report" tooltip="Drucken"/>
		<separator/>
		<button image="../images/PDF.svg" id="export_pdf" tooltip="Nach PDF exportieren" />
		<button image="../images/ExportToExcel.svg" id="export_excel" tooltip="Nach Excel exportieren" />
		<button image="../images/ExportToWord.svg" id="export_word" tooltip="Nach Word exportieren" />
		<button image="../images/CSV.svg" id="export_csv" tooltip="Nach CSV exportieren" />
		<button image="../images/XML.svg" id="export_xml" tooltip="Nach XML exportieren" />
		<separator/>
		<choice width="auto" id="results" tooltip="Max. Anzahl der Ergebnisse" text="Ergebnisse">
			<choiceitem id="1">1 Ergebnis</choiceitem>
			<choiceitem id="10">10 Ergebnisse</choiceitem>
			<choiceitem id="100">100 Ergebnisse</choiceitem>
			<choiceitem id="1000">1000 Ergebnisse</choiceitem>
			<choiceitem id="10000">10000 Ergebnisse</choiceitem>
			<choiceitem id="-1">Alle Ergebnisse</choiceitem>
		</choice>
	</toolbar>
</toolbarapplet>