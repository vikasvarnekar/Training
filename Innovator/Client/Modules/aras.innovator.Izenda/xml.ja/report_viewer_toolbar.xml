<?xml version="1.0" encoding="utf-8" ?>
<toolbarapplet on_load="onToolbarAppletLoad" on_click="onButtonClick" buttonstyle="windows" buttonsize="26,25">
	<toolbar id="viewerbar">
		<button image="../images/New.svg" id="new_report" tooltip="新しいレポート"/>
		<button image="../images/EditItem.svg" id="edit_report" tooltip="レポートを編集" />
		<button image="../images/SaveAs.svg" id="save_as_report" tooltip="名前を付けて保存..." />
		<button image="../images/Delete.svg" id="delete_report" tooltip="レポートを削除" />
		<separator/>
		<button image="../images/Print.svg" id="print_report" tooltip="印刷"/>
		<separator/>
		<button image="../images/PDF.svg" id="export_pdf" tooltip="PDFに出力" />
		<button image="../images/ExportToExcel.svg" id="export_excel" tooltip="Excelに出力" />
		<button image="../images/ExportToWord.svg" id="export_word" tooltip="Wordに出力" />
		<button image="../images/CSV.svg" id="export_csv" tooltip="CSVに出力" />
		<button image="../images/XML.svg" id="export_xml" tooltip="XMLに出力" />
		<separator/>
		<choice width="auto" id="results" tooltip="検索結果の表示件数" text="検索結果">
			<choiceitem id="1">1 件</choiceitem>
			<choiceitem id="10">10 件</choiceitem>
			<choiceitem id="100">100 件</choiceitem>
			<choiceitem id="1000">1000 件</choiceitem>
			<choiceitem id="10000">10000 件</choiceitem>
			<choiceitem id="-1">全件</choiceitem>
		</choice>
	</toolbar>
</toolbarapplet>