<?xml version="1.0" encoding="UTF-8"?>
<toolbarapplet
	on_load = "onToolbarLoad"
	on_click = "onToolbarClick"
	on_change = "onToolbarClick"
	buttonsize = "26,25"
	top_border = "1">
	<toolbar id="normal">
		<button image="../images/Print.svg" id="print" tooltip="Imprimer"/>
		<separator/>
		<button image="../images/Undo.svg" id="undo" tooltip="Annuler"/>
		<button image="../images/Redo.svg" id="redo" tooltip="Reprendre"/>
		<separator/>
		<button image="../images/ExecuteSearch.svg" id="find" tooltip="Trouver"/>
		<button image="../images/ViewRevisions.svg" id="replace" tooltip="Remplacer"/>
		<separator/>
		<button image="../images/Unindent.svg" id="unindent" tooltip="Sans alinéa"/>
		<button image="../images/Indent.svg" id="indent" tooltip="Alinéa"/>
		<separator/>
		<button image="../images/Formatting.svg" id="formatting" tooltip="Formatage"/>
		<button image="../images/Comment.svg" id="comment" tooltip="Commenter"/>
		<button image="../images/Uncomment.svg" id="uncomment" tooltip="Effacer le commentaire"/>
		<separator/>
		<button image="../images/Compile.svg" id="chksyn" tooltip="Vérifier la syntaxe"/>
		<separator/>
		<choice id="side" width="auto">
			<choiceitem id="server">Côté serveur</choiceitem>
			<choiceitem id="client">Côté client</choiceitem>
		</choice>
		<choice id="method_lang" width="auto">
			<choiceitem/>
		</choice>
		<separator/>
		<button image="../images/Tree.svg" id="ftoc" state="1" tooltip="Afficher le guide du code"/>
		<button image="../images/HideTOC.svg" id="toc_pos" state="0" tooltip="Guide du code Gauche/Droit"/>
		<separator/>
		<button image="../images/HelpLookup.svg" id="help" tooltip="Aide pour cette méthode"/>
		<button image="../images/Help.svg" id="fhelp" state="1" tooltip="Afficher l'aide à la méthode"/>
	</toolbar>
</toolbarapplet>