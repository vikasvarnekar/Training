<?xml version="1.0" encoding="UTF-8"?>
<toolbarapplet
	on_load = "onToolbarLoad"
	on_click = "onToolbarClick"
	on_change = "onToolbarClick"
	buttonsize = "26,25"
	top_border = "1">
	<toolbar id="normal">
		<button image="../images/Print.svg" id="print" tooltip="Drucken"/>
		<separator/>
		<button image="../images/Undo.svg" id="undo" tooltip="Rückgängig machen"/>
		<button image="../images/Redo.svg" id="redo" tooltip="Neu machen"/>
		<separator/>
		<button image="../images/ExecuteSearch.svg" id="find" tooltip="Finden"/>
		<button image="../images/ViewRevisions.svg" id="replace" tooltip="Ersetzen"/>
		<separator/>
		<button image="../images/Unindent.svg" id="unindent" tooltip="Einrückung entfernen"/>
		<button image="../images/Indent.svg" id="indent" tooltip="Einrücken"/>
		<separator/>
		<button image="../images/Formatting.svg" id="formatting" tooltip="Formatierung"/>
		<button image="../images/Comment.svg" id="comment" tooltip="Kommentar"/>
		<button image="../images/Uncomment.svg" id="uncomment" tooltip="Kommentar entfernen"/>
		<separator/>
		<button image="../images/Compile.svg" id="chksyn" tooltip="Syntax prüfen"/>
		<separator/>
		<choice id="side" width="auto">
			<choiceitem id="server">Server-side</choiceitem>
			<choiceitem id="client">Client-side</choiceitem>
		</choice>
		<choice id="method_lang" width="auto">
			<choiceitem/>
		</choice>
		<separator/>
		<button image="../images/Tree.svg" id="ftoc" state="1" tooltip="Code Guide anzeigen"/>
		<button image="../images/HideTOC.svg" id="toc_pos" state="0" tooltip="Code Guide links/rechts"/>
		<separator/>
		<button image="../images/HelpLookup.svg" id="help" tooltip="Hilfe für diese Methode"/>
		<button image="../images/Help.svg" id="fhelp" state="1" tooltip="Methodehilfe anzeigen"/>
	</toolbar>
</toolbarapplet>