<toolbarapplet
  on_click      = "onClickItem"
  on_load       = "onToolbarLoad"
  buttonstyle   = "windows"
  buttonsize    = "22,22"
  font          = "Arial-12"
  bottom_border = "1">

  <toolbar id="normal">
    <button image="../scripts/ReportTool/images/16x16_newTable.gif"  id="table"    tooltip="Tabelle einfügen"     >Tabelle  </button>
    <button image="../scripts/ReportTool/images/16x16_rowAbove.gif"  id="tr-above" tooltip="Zeile oberhalb einfügen" >Zeile oberhalb  </button>
    <button image="../scripts/ReportTool/images/16x16_rowBelow.gif"  id="tr-below" tooltip="Zeile unterhalb einfügen" >Zeile unterhalb  </button>
    <button image="../scripts/ReportTool/images/16x16_cellLeft.gif"  id="td-left"  tooltip="Zelle links einfügen" >Zelle links  </button>
    <button image="../scripts/ReportTool/images/16x16_cellRight.gif" id="td-right" tooltip="Zelle rechts einfügen">Zelle rechts  </button>
    <separator/>
    <button image="../scripts/ReportTool/images/16x16_deleteCell.gif" id="del-cell" tooltip="Zelle löschen">Zelle löschen  </button>
    <button image="../scripts/ReportTool/images/16x16_deleteRow.gif"  id="del-row"  tooltip="Ganze Zeile löschen" >Ganze Zeile löschen  </button>
    <separator/>
    <button image="../scripts/ReportTool/images/16x16_cssStyles.gif" id="styles"     tooltip="Stile"    >Stile  </button>
    <button image="../scripts/ReportTool/images/16x16_cellStyle.gif" id="cell-style" tooltip="Zellen-Stil">Zellen-Stil  </button>
    <button image="../scripts/ReportTool/images/16x16_value.gif"     id="cell-value" tooltip="Zellen-Wert">Wert  </button>
    <button image="../scripts/ReportTool/images/16x16_picture.gif"   id="image"      tooltip="Bild"     >Bild  </button>
    <separator/>
    <button image="../scripts/ReportTool/images/16x16_refresh.gif" id="refresh" tooltip="Objekt neu laden">Neu laden  </button>
  </toolbar>

</toolbarapplet>