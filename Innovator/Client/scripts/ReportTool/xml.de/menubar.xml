<menuapplet
  on_select = "onClickItem"
  on_check  = "onCheckMenu"
  on_load   = "onMenuLoad"
  show      = "menubar">

  <menubar id="menubar">
    <menu id="file_menu" name="Datei">
      <item id="new" name="Neu" disabled="true"/>
      <item id="save" name="Speichern" disabled="true"/>
      <separator/>
      <item id="print" name="Drucken"/>
      <separator/>
      <item id="save_unlock_close" name="Speichern, Entsperren &amp; Schließen" disabled="true"/>
      <separator/>
      <item id="close" name="Beenden"/>
    </menu>

    <menu id="edit_menu" name="Bearbeiten">
      <item id="lock" name="Sperren" disabled="true"/>
      <item id="unlock" name="Entsperren" disabled="true"/>
      <separator/>
      <item id="undo" name="Änderungen zurücksetzen" disabled="true"/>
    </menu>
	
    <menu id="views_menu" name="Ansichten">
      <item id="access" name="Berechtigungen" />
      <item id="query" name="Query-Formular" />
      <item id="style_tree" name="Stil-Navigator" />
