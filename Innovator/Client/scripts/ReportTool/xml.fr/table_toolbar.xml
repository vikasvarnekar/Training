<toolbarapplet
  on_click      = "onClickItem"
  on_load       = "onToolbarLoad"
  buttonstyle   = "windows"
  buttonsize    = "22,22"
  font          = "Arial-12"
  bottom_border = "1">

  <toolbar id="normal">
    <button image="../scripts/ReportTool/images/16x16_newTable.gif"  id="table"    tooltip="Insérer le tableau"     >Tableau  </button>
    <button image="../scripts/ReportTool/images/16x16_rowAbove.gif"  id="tr-above" tooltip="Insérer une ligne au-dessus" >Ligne au-dessus  </button>
    <button image="../scripts/ReportTool/images/16x16_rowBelow.gif"  id="tr-below" tooltip="Insérer une ligne au-dessous" >Ligne au-dessous  </button>
    <button image="../scripts/ReportTool/images/16x16_cellLeft.gif"  id="td-left"  tooltip="Insérer une colonne à gauche" >Cellule à gauche  </button>
    <button image="../scripts/ReportTool/images/16x16_cellRight.gif" id="td-right" tooltip="Insérer une colonne à droite">Cellule à droite  </button>
    <separator/>
    <button image="../scripts/ReportTool/images/16x16_deleteCell.gif" id="del-cell" tooltip="Supprimer une cellule">Supprimer une cellule  </button>
    <button image="../scripts/ReportTool/images/16x16_deleteRow.gif"  id="del-row"  tooltip="Supprimer une ligne" >Supprimer une ligne  </button>
    <separator/>
    <button image="../scripts/ReportTool/images/16x16_cssStyles.gif" id="styles"     tooltip="Styles"    >Styles  </button>
    <button image="../scripts/ReportTool/images/16x16_cellStyle.gif" id="cell-style" tooltip="Style de la cellule">Style  </button>
    <button image="../scripts/ReportTool/images/16x16_value.gif"     id="cell-value" tooltip="Valeur de la cellule">Valeur  </button>
    <button image="../scripts/ReportTool/images/16x16_picture.gif"   id="image"      tooltip="Image"     >Image  </button>
    <separator/>
    <button image="../scripts/ReportTool/images/16x16_refresh.gif" id="refresh" tooltip="Rafraîchir l'item">Rafraîchir  </button>
  </toolbar>

</toolbarapplet>