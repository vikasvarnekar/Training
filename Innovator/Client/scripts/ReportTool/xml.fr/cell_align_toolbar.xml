<toolbarapplet
  on_click        = "onClickItem"
  on_load         = "onToolbarLoad"
  buttonstyle     = "windows"
  buttonsize      = "22,22"
  font            = "Arial-12"
  bottom_border   = "1">

  <toolbar id="normal">
    <button image="../scripts/ReportTool/images/top-left.jpg"      id="top-left"      tooltip="En haut à gauche"     >En haut à gauche  </button>
    <button image="../scripts/ReportTool/images/top-center.jpg"    id="top-center"    tooltip="En haut au centre"   >En haut au centre  </button>
    <button image="../scripts/ReportTool/images/top-right.jpg"     id="top-right"     tooltip="En haut à droite"    >En haut à droite  </button>
    <button image="../scripts/ReportTool/images/middle-left.jpg"   id="middle-left"   tooltip="Au milieu à gauche"  >Au milieu à gauche  </button>
    <button image="../scripts/ReportTool/images/middle-center.jpg" id="middle-center" tooltip="Au milieu au centre">Au milieu au centre  </button>
    <button image="../scripts/ReportTool/images/middle-right.jpg"  id="middle-right"  tooltip="Au milieu à droite" >Au milieu à droite  </button>
    <button image="../scripts/ReportTool/images/bottom-left.jpg"   id="bottom-left"   tooltip="En bas à gauche"  >En bas à gauche  </button>
    <button image="../scripts/ReportTool/images/bottom-center.jpg" id="bottom-center" tooltip="En bas au centre">En bas au centre  </button>
    <button image="../scripts/ReportTool/images/bottom-right.jpg"  id="bottom-right"  tooltip="En bas à droite" >En bas à droite </button>
  </toolbar>

</toolbarapplet>

