<?xml version="1.0" encoding="UTF-8"?>
<toolbarapplet
	on_click = "onClickItem"
	on_load  = "onToolbarLoad"
	buttonstyle = "windows"
	buttonsize = "22,22"
	font = "Arial-12"
	top_border = "1"
	bottom_border = "1">
	<toolbar id="normal">
		<button image="../images/Print.svg" id="print" tooltip="Imprimer l'item" disabled="true">Imprimer </button>
		<separator/>
		<button image="../images/Delete.svg" id="delete" tooltip="Supprimer l'item" disabled="true">Supprimer </button>
		<separator/>
		<button image="../images/LockItem.svg" id="lock" tooltip="Verrouiller l'item" disabled="true" >Verrouiller </button>
		<button image="../images/UnockItem.svg" id="unlock" tooltip="Déverrouiller l'item" disabled="true">Déverrouiller </button>
		<button image="../images/Rollback.svg" id="undo" tooltip="Annuler les modifications de l'item" disabled="true">Annuler </button>
		<separator/>
		<button image="../images/Save.svg" id="save" tooltip="Enregistrer" disabled="true" >Enregistrer </button>
		<button image="../images/SaveUnlockClose.svg" id="save_unlock_close" tooltip="Enregistrer, Déverrouiller &amp; Fermer" disabled="true">Enregistrer et fermer </button>
	</toolbar>
</toolbarapplet>