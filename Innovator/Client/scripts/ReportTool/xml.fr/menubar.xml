<menuapplet
  on_select = "onClickItem"
  on_check  = "onCheckMenu"
  on_load   = "onMenuLoad"
  show      = "menubar">

  <menubar id="menubar">
    <menu id="file_menu" name="Fichier">
      <item id="new" name="Nouveau" disabled="true"/>
      <item id="save" name="Enregistrer" disabled="true"/>
      <separator/>
      <item id="print" name="Imprimer"/>
      <separator/>
      <item id="save_unlock_close" name="Enregistrer, Déverrouiller &amp; Fermer" disabled="true"/>
      <separator/>
      <item id="close" name="Fermer"/>
    </menu>

    <menu id="edit_menu" name="Modifier">
      <item id="lock" name="Verrouiller" disabled="true"/>
      <item id="unlock" name="Déverrouiller" disabled="true"/>
      <separator/>
      <item id="undo" name="Annuler les modifications" disabled="true"/>
    </menu>
	
    <menu id="views_menu" name="Vues">
      <item id="access" name="Accès" />
      <item id="query" name="Formulaire de la requête" />
      <item id="style_tree" name="Style Navigator" />
      <item id="textpad" name="Textpad" />
    </menu>
    
  </menubar>
</menuapplet>