<toolbarapplet
  on_click      = "onClickItem"
  on_load       = "onToolbarLoad"
  buttonstyle   = "windows"
  buttonsize    = "22,22"
  font          = "Arial-12"
  bottom_border = "1">

  <toolbar id="normal">
    <button image="../scripts/ReportTool/images/16x16_newTable.gif"  id="table"    tooltip="テーブルの挿入">Table  </button>
    <button image="../scripts/ReportTool/images/16x16_rowAbove.gif"  id="tr-above" tooltip="行の上に挿入">Row Above  </button>
    <button image="../scripts/ReportTool/images/16x16_rowBelow.gif"  id="tr-below" tooltip="行の下に挿入">Row Below  </button>
    <button image="../scripts/ReportTool/images/16x16_cellLeft.gif"  id="td-left"  tooltip="セルの左に挿入">Cell Left  </button>
    <button image="../scripts/ReportTool/images/16x16_cellRight.gif" id="td-right" tooltip="セルの右に挿入">Cell Right  </button>
    <separator/>
    <button image="../scripts/ReportTool/images/16x16_deleteCell.gif" id="del-cell" tooltip="セルの削除">Delete Cell  </button>
    <button image="../scripts/ReportTool/images/16x16_deleteRow.gif"  id="del-row"  tooltip="行の削除">Delete Row  </button>
    <separator/>
    <button image="../scripts/ReportTool/images/16x16_cssStyles.gif" id="styles"     tooltip="スタイル">Styles  </button>
    <button image="../scripts/ReportTool/images/16x16_cellStyle.gif" id="cell-style" tooltip="セルのスタイル">Style  </button>
    <button image="../scripts/ReportTool/images/16x16_value.gif"     id="cell-value" tooltip="セルの値">Value  </button>
    <button image="../scripts/ReportTool/images/16x16_picture.gif"   id="image"      tooltip="イメージ">Image  </button>
    <separator/>
    <button image="../scripts/ReportTool/images/16x16_refresh.gif" id="refresh" tooltip="アイテムのリフレッシュ">Refresh  </button>
  </toolbar>

</toolbarapplet>