{
  "id" : "single_page_topic",
  "type"  : "wrapperGroup",
  "extraclass": "skin-component-properties",
  "wrapper": "divElement",
  "items" : [
    {
      "type": "collapsible",
      "label": "General",
      "expanded": "@uiStates.single_page_topic_general",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Go to Top Icon"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "goto_top_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.goto_top_image"
              }
            }
          ]
        }
      ]
    }
  ]
}
