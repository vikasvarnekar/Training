{
  "id" : "home_page_glossary",
  "type"  : "wrapperGroup",
  "extraclass": "skin-component-properties",
  "wrapper": "divElement",
  "items" : [
    {
      "type": "collapsible",
      "label": "Colors",
      "expanded": "@uiStates.home_page_glossary_color",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Term"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_term_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_term_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Term Hover"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_term_hover_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_term_hover_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Term Hover Background"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_term_hover_bgcolor",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_term_hover_bgcolor"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Definition"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_definition_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_definition_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Search Text"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_search_text_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_search_text_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Search Text Background"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_search_text_bgcolor",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_search_text_bgcolor"}}
            }
          ]
        }
      ]
    }
  ]
}
