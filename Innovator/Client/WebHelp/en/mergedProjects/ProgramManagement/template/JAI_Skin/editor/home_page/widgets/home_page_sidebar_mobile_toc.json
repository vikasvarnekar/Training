{
  "id" : "home_page_sidebar_mobile_toc",
  "type"  : "wrapperGroup",
  "extraclass": "skin-component-properties",
  "wrapper": "divElement",
  "items" : [
    {
      "type": "collapsible",
      "label": "Colors",
      "expanded": "@uiStates.home_page_sidebar_mobile_toc_color",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Item Text"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.sidebar_toc_mobile_item_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "sidebar_toc_mobile_item_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Item Hover"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.sidebar_toc_mobile_item_hover_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "sidebar_toc_mobile_item_hover_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Item Selected"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.sidebar_toc_mobile_item_selected_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "sidebar_toc_mobile_item_selected_color"}}
            }
          ]
        }
      ]
    },
    {
      "type": "collapsible",
      "label": "Images",
      "expanded": "@uiStates.home_page_sidebar_mobile_toc_images",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Item Drill Down"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "sidebar_toc_mobile_item_drill_down_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.sidebar_toc_mobile_item_drill_down_image"
              }
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Item Drill Down Hover"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "sidebar_toc_mobile_item_drill_down_hover_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.sidebar_toc_mobile_item_drill_down_hover_image"
              }
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Item Back"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "sidebar_toc_mobile_item_back_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.sidebar_toc_mobile_item_back_image"
              }
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Item Back Hover"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "sidebar_toc_mobile_item_back_hover_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.sidebar_toc_mobile_item_back_hover_image"
              }
            }
          ]
        }
      ]
    }
  ]
}
