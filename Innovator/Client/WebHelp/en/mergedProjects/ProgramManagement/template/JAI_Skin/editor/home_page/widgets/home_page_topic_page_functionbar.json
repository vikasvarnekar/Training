{
  "id" : "home_page_topic_page_functionbar",
  "type"  : "wrapperGroup",
  "extraclass": "skin-component-properties",
  "wrapper": "divElement",
  "items" : [
    {
      "type": "collapsible",
      "label": "Colors",
      "expanded": "@uiStates.home_page_topic_page_functionbar_color",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Button Text"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.functionbar_button_text_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "functionbar_button_text_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Button Text Background"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.functionbar_button_bgcolor",
              "on-change": {"name": "colorChanged", "args": {"attr": "functionbar_button_bgcolor"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Button Text Hover"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.functionbar_button_text_hover_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "functionbar_button_text_hover_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Button Text Hover Background"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.functionbar_button_hover_bgcolor",
              "on-change": {"name": "colorChanged", "args": {"attr": "functionbar_button_hover_bgcolor"}}
            }
          ]
        }
      ]
    }
  ]
}
