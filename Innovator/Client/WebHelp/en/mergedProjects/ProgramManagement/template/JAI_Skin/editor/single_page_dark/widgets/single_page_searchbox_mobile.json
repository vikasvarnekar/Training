{
  "id" : "single_page_searchbox_mobile",
  "type"  : "wrapperGroup",
  "extraclass": "skin-component-properties",
  "wrapper": "divElement",
  "items" : [
    {
      "type": "collapsible",
      "label": "Colors",
      "expanded": "@uiStates.single_page_searchbox_mobile_color",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Text"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.search_box_mobile_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "search_box_mobile_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Field Background"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.search_box_mobile_field_bgcolor",
              "on-change": {"name": "colorChanged", "args": {"attr": "search_box_mobile_field_bgcolor"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Field Border"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.search_box_mobile_field_border_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "search_box_mobile_field_border_color"}}
            }
          ]
        }
      ]
    }
  ]
}
