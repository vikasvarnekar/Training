              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_search_border_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Search Background"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_search_background_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_search_background_color"}}
