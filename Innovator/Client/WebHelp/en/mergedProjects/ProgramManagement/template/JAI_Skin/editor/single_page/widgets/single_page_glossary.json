        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Alphabet"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_alphabet_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_alphabet_color"}}
