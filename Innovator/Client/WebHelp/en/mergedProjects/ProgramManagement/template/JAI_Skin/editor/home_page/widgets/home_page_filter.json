{
  "id" : "home_page_filter",
  "type"  : "wrapperGroup",
  "extraclass": "skin-component-properties",
  "wrapper": "divElement",
  "items" : [
    {
      "type": "collapsible",
      "label": "Colors",
      "expanded": "@uiStates.home_page_filter_color",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Group Text"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.filter_group_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "filter_group_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Group Border"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.filter_group_border_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "filter_group_border_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Entry Text"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.filter_entry_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "filter_entry_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Reset Button Text"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.filter_reset_button_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "filter_reset_button_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Reset Button Background"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.filter_reset_button_bgcolor",
              "on-change": {"name": "colorChanged", "args": {"attr": "filter_reset_button_bgcolor"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Reset Button Hover"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.filter_reset_button_hover_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "filter_reset_button_hover_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Reset Button Hover Background"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.filter_reset_button_hover_bgcolor",
              "on-change": {"name": "colorChanged", "args": {"attr": "filter_reset_button_hover_bgcolor"}}
            }
          ]
        }
      ]
    },
    {
      "type": "collapsible",
      "label": "Images",
      "expanded": "@uiStates.home_page_filter_images",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Filter Applied"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "filter_applied_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.filter_applied_image"
              }
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Reset Filter"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "filter_reset_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.filter_reset_image"
              }
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Active Checkbox"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "filter_active_checkbox_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.filter_active_checkbox_image"
              }
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Inactive Checkbox"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "filter_inactive_checkbox_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.filter_inactive_checkbox_image"
              }
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Active Radio Button"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "filter_radio_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.filter_radio_image"
              }
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Inactive Radio Button"
            },
            {
              "type": "widget",
              "id"  : "media_source",
              "changeEvent": "imageChanged",
              "hrefAttrName": "filter_incative_radio_image",
              "inputModel": {
                "variant": "secondary",
                "basePath": "@basePath",
                "filePath": "@attrs.filter_incative_radio_image"
              }
            }
          ]
        }
      ]
    }
  ]
}
