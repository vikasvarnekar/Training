{
  "id" : "single_page_media_query",
  "type"  : "wrapperGroup",
  "extraclass": "skin-component-properties",
  "wrapper": "divElement",
  "items" : [
    {
      "type": "collapsible",
      "label": "General",
      "expanded": "@uiStates.single_page_media_query_general",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Phone Maximum Width"
            },
            {
              "type": "textfield",
              "extraclass": "coral-Form-field",
              "data": "attrs.max_width_mobile",
              "on-change": {"name": "textChanged", "args": {"attr": "max_width_mobile"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Tablet Maximum Width"
            },
            {
              "type": "textfield",
              "extraclass": "coral-Form-field",
              "data": "attrs.max_width_tablet",
              "on-change": {"name": "textChanged", "args": {"attr": "max_width_tablet"}}
            }
          ]
        }
      ]
    }
  ]
}
