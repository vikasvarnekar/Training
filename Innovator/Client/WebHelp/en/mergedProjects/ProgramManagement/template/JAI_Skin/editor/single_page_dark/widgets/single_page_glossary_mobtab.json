{
  "id" : "single_page_glossary_mobtab",
  "type"  : "wrapperGroup",
  "extraclass": "skin-component-properties",
  "wrapper": "divElement",
  "items" : [
    {
      "type": "collapsible",
      "label": "Colors",
      "expanded": "@uiStates.single_page_glossary_color",
      "defaultState": true,
      "items": [
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Term"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_term_mobtab_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_term_mobtab_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Definition"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_definition_mobtab_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_definition_mobtab_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Search Text"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_search_text_mobtab_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_search_text_mobtab_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Search Border"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_search_border_mobtab_color",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_search_border_mobtab_color"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Search Background"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_search_mobtab_bgcolor",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_search_mobtab_bgcolor"}}
            }
          ]
        },
        {
          "type": "divElement2",
          "extraclass": "group",
          "items": [
            {
              "type": "label",
              "extraclass": "coral-FieldLabel",
              "label": "Term Separator"
            },
            {
              "type": "colorpicker",
              "extraclass": "coral-Form-field",
              "data": "attrs.glossary_separator_mobtab_bgcolor",
              "on-change": {"name": "colorChanged", "args": {"attr": "glossary_separator_mobtab_bgcolor"}}
            }
          ]
        }

      ]
    }
  ]
}
