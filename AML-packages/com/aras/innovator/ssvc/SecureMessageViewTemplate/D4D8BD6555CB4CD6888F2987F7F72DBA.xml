<AML>
 <Item type="SecureMessageViewTemplate" id="D4D8BD6555CB4CD6888F2987F7F72DBA" action="add">
  <template>&lt;xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"&gt;
	&lt;xsl:output indent="yes" omit-xml-declaration="yes"/&gt;
	&lt;xsl:template match="/Result/Item"&gt;
		&lt;tr class="ssvc-message" style="max-width: inherit;"&gt;
			&lt;td style="border-bottom: 1px solid #d4d4d4; padding-top: 10px; padding-bottom: 10px; max-width: inherit;"&gt;
				&lt;table border="0" cellspacing="0" cellpadding="0" width="100%"&gt;
					&lt;xsl:attribute name="style"&gt;
						&lt;xsl:text&gt;max-width: inherit; &lt;/xsl:text&gt;
						&lt;xsl:text&gt;border-right: 4px solid &lt;/xsl:text&gt;
						&lt;xsl:value-of select="item_type_color" /&gt;
						&lt;xsl:text&gt;; padding-right: 4px; font-size: 12px; font-family: Arial,​Helvetica,​sans-serif; color: #444444&lt;/xsl:text&gt;
					&lt;/xsl:attribute&gt;
					&lt;tbody style="max-width: inherit;"&gt;
						&lt;tr class="ssvc-message-info" style="max-width: inherit;"&gt;
							&lt;td width="1%" style="vertical-align: top;"&gt;
								&lt;img width="20" height="20"&gt;
									&lt;xsl:attribute name="src"&gt;
										&lt;xsl:choose&gt;
											&lt;xsl:when test="message_is_reply = 1"&gt;
												&lt;xsl:text&gt;cid:replyMessageIcon&lt;/xsl:text&gt;
											&lt;/xsl:when&gt;
											&lt;xsl:otherwise&gt;
												&lt;xsl:text&gt;cid:messageIcon&lt;/xsl:text&gt;
											&lt;/xsl:otherwise&gt;
										&lt;/xsl:choose&gt;
									&lt;/xsl:attribute&gt;
								&lt;/img&gt;
							&lt;/td&gt;
							&lt;td style="padding-left: 4px; padding-right: 4px;"&gt;
								&lt;table border="0" cellspacing="0" cellpadding="0" width="100%" style="font-size: 12px; font-family: Arial,​Helvetica,​sans-serif; border-spacing: 0; color: #444444;"&gt;
									&lt;tbody&gt;
										&lt;tr class="ssvc-message-info-top" style="line-height: 12px;"&gt;
											&lt;td class="ssvc-message-userName"&gt;
												&lt;xsl:value-of select="message_created_by_id/@keyed_name"/&gt;
											&lt;/td&gt;
											&lt;td align="right"&gt;
												&lt;xsl:value-of select="item_keyed_name"/&gt;
											&lt;/td&gt;
										&lt;/tr&gt;
										&lt;tr class="ssvc-message-info-bottom" style="font-size: 10px; line-height: 14px;"&gt;
											&lt;td class="ssvc-message-time" style="color: #727272;"&gt;
												&lt;xsl:value-of select="message_created_on"/&gt;
											&lt;/td&gt;
											&lt;td align="right" style="color: #727272;"&gt;
												&lt;xsl:if test="item_major_rev != ''"&gt;
													&lt;xsl:value-of select="item_major_rev"/&gt;
													&lt;xsl:if test="item_version != ''or item_state != ''"&gt;
														&lt;xsl:text&gt; - &lt;/xsl:text&gt;
													&lt;/xsl:if&gt;
												&lt;/xsl:if&gt;
												&lt;xsl:if test="item_version != ''"&gt;
													&lt;xsl:value-of select="item_version"/&gt;
													&lt;xsl:if test="item_state != ''"&gt;
														&lt;xsl:text&gt; - &lt;/xsl:text&gt;
													&lt;/xsl:if&gt;
												&lt;/xsl:if&gt;
												&lt;xsl:if test="item_state != ''"&gt;
													&lt;xsl:value-of select="item_state"/&gt;
												&lt;/xsl:if&gt;
											&lt;/td&gt;
										&lt;/tr&gt;
									&lt;/tbody&gt;
								&lt;/table&gt;
							&lt;/td&gt;
						&lt;/tr&gt;
						&lt;tr class="ssvc-message-container" style="max-width: inherit;"&gt;
							&lt;td colspan="2" class="ssvc-message-text" style="padding-top: 10px; max-width: inherit;"&gt;
								&lt;div class="ssvc-message-text" style="line-height: 17px; white-space: pre-wrap; word-wrap: break-word;"&gt;
									&lt;xsl:copy-of select="message_comments/node()"/&gt;
								&lt;/div&gt;
							&lt;/td&gt;
						&lt;/tr&gt;
						&lt;xsl:if test="message_classification != 'Manual'"&gt;
							&lt;tr class='ssvc-message-image-container'&gt;
								&lt;td colspan='2' style='padding-top: 3px;'&gt;
									&lt;xsl:choose&gt;
										&lt;xsl:when test="message_classification = 'Markup'"&gt;
											&lt;xsl:text&gt;[Image]&lt;/xsl:text&gt;
										&lt;/xsl:when&gt;
										&lt;xsl:when test="message_classification = 'Audio'"&gt;
											&lt;xsl:text&gt;[Audio]&lt;/xsl:text&gt;
										&lt;/xsl:when&gt;
										&lt;xsl:when test="message_classification = 'Video'"&gt;
											&lt;xsl:text&gt;[Video]&lt;/xsl:text&gt;
										&lt;/xsl:when&gt;
									&lt;/xsl:choose&gt;
								&lt;/td&gt;
							&lt;/tr&gt;
						&lt;/xsl:if&gt;
					&lt;/tbody&gt;
				&lt;/table&gt;
			&lt;/td&gt;
		&lt;/tr&gt;
	&lt;/xsl:template&gt;
&lt;/xsl:stylesheet&gt;</template>
 </Item>
</AML>